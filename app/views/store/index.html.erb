<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<h1>Your Pragmtic Catalog</h1>

<ul class="catalog">
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
      <li>
        <%= image_tag(product.image_url, class: 'list_image', size: 200,) %> 
        <h2><%= product.title %></h2>
        <p>
          <%= sanitize(product.description) %>
        </p>
        <div class="price">
          <%= number_to_currency(product.price) %>
        </div>
      </li>
      <% end %>
    <% end %>
  <% end %>
</ul>
